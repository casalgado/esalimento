{
	"hosting": {
		"public": "public",
		"ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
		"rewrites": [
			{
				"source": "!/@(js|css)/**",
				"destination": "/index.html"
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"database": {
		"rules": "database.rules.json"
	}
}
